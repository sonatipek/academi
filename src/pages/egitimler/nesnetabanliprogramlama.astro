---
import Layout from '../../layouts/Layout.astro';
import Main from '../../components/sections/Main.astro';

import LessonDetail from '../../components/LessonDeatil.astro'
import Accordion from '../../components/Accordion.astro';
import AccordionItem from '../../components/AccordionItem.astro';
---

<Layout title="Nesne Tabanlı Programlama">
    <Main>
        <LessonDetail 
            titleOfLesson="Nesne Tabanlı Programlama - OOP"
            descOfLesson="Bu eğitimimizde terminolojide 'Object Orianted Programming' olarak kullanılan Nesne Tabanlı Programlamayı 3 dilde öğreneceksiniz; PHP, Python, Javascript gibi popüler diller ile beraber sektörün aranan yazılımcısı olacaksınız!"
            imgSrc="/illustrations/hackermind.svg"
            breadcrumb="Nesne Tabanlı Programlama Eğitimi"
            price="29.90"
            itemList="{ itemList: ['Eğitim dili Türkçedir', 'Temel yazılım bilgisi gereklidir', 'ES6 bilgisi bir avantaj sağlar fakat gerekli değildir']}"
        />
        <Accordion>
            <AccordionItem
                itemTitle="Başlangıç"
                itemList="{itemList : ['OOP Nedir', 'OOP Nereden Çıkmıştır']}"
                itemID="1"
                itemIDWithHashtag="#1"
            />

            <AccordionItem
                itemTitle="OOP Temelleri"
                itemList="{itemList : ['Class', 'Miras Alma', 'Örnek -1', 'OOP ile SOLID Prensibi']}"
                itemID="2"
                itemIDWithHashtag="#2"
            />
            <AccordionItem
                itemTitle="JS OOP"
                itemList="{itemList : ['JS ile OOP Giriş', 'JS ile OOP İleri Seviye']}"
                itemID="3"
                itemIDWithHashtag="#3"
            />
            <AccordionItem
                itemTitle="PHP OOP"
                itemList="{itemList : ['PHP ile OOP Giriş', 'PHP ile OOP İleri Seviye']}"
                itemID="4"
                itemIDWithHashtag="#4"
            />
            <AccordionItem
                itemTitle="Python OOP"
                itemList="{itemList : ['Python ile OOP Giriş', 'Python ile OOP İleri Seviye']}"
                itemID="5"
                itemIDWithHashtag="#5"
            />
        </Accordion>

    </Main>
</Layout>